-        if (size) {
+        if (size > 0) {
             //Valid string received
             tr_info("Read %d bytes. Valid string: %s\n", size, ipAddress);
             _at.restore_at_timeout();
@@ -207,6 +208,7 @@ retry_open:
 
     _at.cmd_start_stop("^SISS", "?");
     _at.resp_start("^SISS:");
+
